<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - ForestWebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
</head>
<body>
<header>
    <!-- nav bar -->
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a id="HomeLink" class="navbar-brand" asp-area="" asp-page="/Index">
                <img style="border-radius: 78px;" width="60" height="60" src="~/images/ForestWebApp.png" alt="Forest Web App"/>
                Inicio
            </a>

            <button id="AboutPageButton" class="main-btn rounded-pill">
                <a class="text-white btn-text-link" asp-page="/About">
                    <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor">
                        <path d="M0 0h24v24H0V0z" fill="none"></path>
                        <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 15c-.55 0-1-.45-1-1v-4c0-.55.45-1 1-1s1 .45 1 1v4c0 .55-.45 1-1 1zm1-8h-2V7h2v2z"></path>
                    </svg>
                    Acerca del App
                </a>
            </button>
        </div>
    </nav>
</header>
<!-- main content -->
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
<!-- footer -->
<footer class="border-top footer text-muted">
    <div class="container text-center">
        &copy; 2023 - Forests App - A. Badilla-Olivas 
    </div>
</footer>
<!-- scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>