@page
@model IndexModel

@{
    ViewData["Title"] = "Bosques";
}

@section Scripts {
    <link rel="stylesheet" href="~/css/table.css"/>
    <script src="~/lib/jquery/table.js"></script>

    <script src="~/js/forest-index.js"></script>
}

<!-- card with the forests table -->
<div class="card rounded-card">
    <div class="card-body rounded-card">
        <!-- title -->
        <h4 id="forestsTitle" class="text-center card-title">Catálogo de Bosques</h4>
        <!-- create forest button -->
        <button id="createForestBtn" class="rounded-pill main-btn-basic" type="button">
            <a class="text-white btn-text-link" asp-page="/Forests/Create">Crear Bosque</a>
        </button>

        <br/>
        <br/>
        <!-- forests table -->
        <table id="forestsTable" class="table hover" aria-describedby="forestsTitle">
            <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Forests[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Forests[0].CountryOfOrigin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Forests[0].TypeOfVegetation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Forests[0].AreaKm2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Forests[0].OldGrowthForest)
                </th>
                <th>
                    Acciones
                </th>
            </tr>
            </thead>
            <!-- forests table body -->
            <tbody>
            @foreach (var item in Model.Forests)
            {
                <tr>
                    <td id="name[@item.Name]">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td id="countryOfOrigin[@item.Name]">
                        @Html.DisplayFor(modelItem => item.CountryOfOrigin)
                    </td>
                    <td id="typeOfVegetation[@item.Name]">
                        @Html.DisplayFor(modelItem => item.TypeOfVegetation)
                    </td>
                    <td id="areaKm2[@item.Name]">
                        @Html.DisplayFor(modelItem => item.AreaKm2)
                    </td>
                    <td id="oldGrowthForest[@item.Name]">
                        @if (item.OldGrowthForest)
                        {
                            <span>Sí</span>
                        }
                        else
                        {
                            <span>No</span>
                        }
                    </td>
                    <!-- crud actions buttons -->
                    <td id="actions[@item.Name]">
                        <!-- edit button -->
                        <button id="editBtn[@item.Name]" class="main-btn rounded-pill" type="button" data-tooltip="Editar Bosque">
                            <a class="text-white btn-text-link" asp-page="/Forests/Edit" asp-route-id="@item.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor">
                                    <path d="M0 0h24v24H0V0z" fill="none"></path>
                                    <path d="M3 17.46v3.04c0 .28.22.5.5.5h3.04c.13 0 .26-.05.35-.15L17.81 9.94l-3.75-3.75L3.15 17.1c-.1.1-.15.22-.15.36zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"></path>
                                </svg>
                            </a>
                        </button>
                        <!-- details button -->
                        <button id="detailsBtn[@item.Name]" class="main-btn rounded-pill" type="button" data-tooltip="Detalles del Bosque">
                            <a class="text-white btn-text-link" asp-page="/Forests/Details" asp-route-id="@item.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor">
                                    <path d="M0 0h24v24H0V0z" fill="none"></path>
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 15c-.55 0-1-.45-1-1v-4c0-.55.45-1 1-1s1 .45 1 1v4c0 .55-.45 1-1 1zm1-8h-2V7h2v2z"></path>
                                </svg>
                            </a>
                        </button>
                        <!-- delete button -->
                        <button id="deleteBtn[@item.Name]" class="delete-btn rounded-pill" type="button" data-tooltip="Eliminar Bosque">
                            <a class="text-white btn-text-link" asp-page="/Forests/Delete" asp-route-id="@item.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor">
                                    <path d="M0 0h24v24H0V0z" fill="none"></path>
                                    <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v10zM18 4h-2.5l-.71-.71c-.18-.18-.44-.29-.7-.29H9.91c-.26 0-.52.11-.7.29L8.5 4H6c-.55 0-1 .45-1 1s.45 1 1 1h12c.55 0 1-.45 1-1s-.45-1-1-1z"></path>
                                </svg>
                            </a>
                        </button>

                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>