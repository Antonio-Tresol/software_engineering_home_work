@page
@model ForestWebApp.Pages.Forests.DetailsModel

@{
    ViewData["Title"] = "Detalles del Bosque: " + Model.Forest.Name;
}

<div class="card rounded-card">
    <div class="card-body rounded-card align-items-center text-center">
        <!-- title and subtitle -->
        <h3 id="ForestName" class="card-title">Detalles del Bosque: @Model.Forest.Name</h3>
        <h4 class="text-muted card-subtitle mb-2">Información del bosque</h4>

        <div class="row d-flex justify-content-center">
            <div class="col-md-6">
                <!-- Details Display -->
                <div>
                    <br/>

                    <!-- Country of Origin -->
                    <h4 class="text-center">@Html.DisplayNameFor(model => model.Forest.CountryOfOrigin)</h4>
                    <h5 id="[@Model.Forest.Name]CountryOfOrigin" class="text-center">@Html.DisplayFor(model => model.Forest.CountryOfOrigin)</h5>
                    <br/>

                    <!-- Type of Vegetation -->
                    <h4 class="text-center">@Html.DisplayNameFor(model => model.Forest.TypeOfVegetation)</h4>
                    <h5 id="[@Model.Forest.Name]TypeOfVegetation" class="text-center">@Html.DisplayFor(model => model.Forest.TypeOfVegetation)</h5>
                    <br/>

                    <!-- Area in Km2 -->
                    <h4 class="text-center">@Html.DisplayNameFor(model => model.Forest.AreaKm2)</h4>
                    <h5 id="[@Model.Forest.Name]AreaKm2" class="text-center">@Html.DisplayFor(model => model.Forest.AreaKm2)</h5>
                    <br/>

                    <!-- Old Growth Forest -->
                    <h4 class="text-center">@Html.DisplayNameFor(model => model.Forest.OldGrowthForest)</h4>
                    <h5 id="[@Model.Forest.Name]OldGrowthForest" class="text-center">@Html.DisplayFor(model => model.Forest.OldGrowthForest)</h5>
                </div>
            </div>
        </div>
    </div>
</div>


<br/>


<div style="display: flex; justify-content: space-between;">
    <!-- Return to Catalog Button -->
    <button id="returnToCatalog" class="main-btn rounded-pill">
        <a class="text-white btn-text-link" asp-page="/Index">
            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor">
                <path d="M0 0h24v24H0V0z" fill="none"></path>
                <path d="M19 11H7.83l4.88-4.88c.39-.39.39-1.03 0-1.42-.39-.39-1.02-.39-1.41 0l-6.59 6.59c-.39.39-.39 1.02 0 1.41l6.59 6.59c.39.39 1.02.39 1.41 0 .39-.39.39-1.02 0-1.41L7.83 13H19c.55 0 1-.45 1-1s-.45-1-1-1z"></path>
            </svg> Volver al Catálogo
        </a>
    </button>
    <!-- Edit Button -->
    <button id="editBtn[@Model.Forest.Name]" class="main-btn-basic rounded-pill" type="button">
        <a class="text-white btn-text-link" asp-page="Edit" asp-route-id="@Model.Forest.Id">
            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor">
                <path d="M0 0h24v24H0V0z" fill="none"></path>
                <path d="M3 17.46v3.04c0 .28.22.5.5.5h3.04c.13 0 .26-.05.35-.15L17.81 9.94l-3.75-3.75L3.15 17.1c-.1.1-.15.22-.15.36zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z"></path>
            </svg> Editar Bosque
        </a>
    </button>

    <!-- Delete Button -->
    <button id="deleteBtn[@Model.Forest.Name]" class="delete-btn-basic rounded-pill" type="button" data-tooltip="Eliminar Bosque">
        <a class="text-white btn-text-link" asp-page="Delete" asp-route-id="@Model.Forest.Id">
            <svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 24 24" width="1em" fill="currentColor">
                <path d="M0 0h24v24H0V0z" fill="none"></path>
                <path d="M6 19c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V9c0-1.1-.9-2-2-2H8c-1.1 0-2 .9-2 2v10zM18 4h-2.5l-.71-.71c-.18-.18-.44-.29-.7-.29H9.91c-.26 0-.52.11-.7.29L8.5 4H6c-.55 0-1 .45-1 1s.45 1 1 1h12c.55 0 1-.45 1-1s-.45-1-1-1z"></path>
            </svg> Eliminar Bosque
        </a>
    </button>
</div>