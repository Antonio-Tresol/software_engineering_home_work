@page
@model ForestWebApp.Pages.Forests.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Forest</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Forest.Name" class="control-label"></label>
                <input asp-for="Forest.Name" class="form-control" />
                <span asp-validation-for="Forest.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Forest.CountryOfOrigin" class="control-label"></label>
                <input asp-for="Forest.CountryOfOrigin" class="form-control" />
                <span asp-validation-for="Forest.CountryOfOrigin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Forest.TypeOfVegetation" class="control-label"></label>
                <input asp-for="Forest.TypeOfVegetation" class="form-control" />
                <span asp-validation-for="Forest.TypeOfVegetation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Forest.AreaKm2" class="control-label"></label>
                <input asp-for="Forest.AreaKm2" class="form-control" />
                <span asp-validation-for="Forest.AreaKm2" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Forest.OldGrowthForest" /> @Html.DisplayNameFor(model => model.Forest.OldGrowthForest)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

